<style>
  .lintext__product-line {
    --background-color: {{ section.settings.background_color }};
    --text-color: {{ section.settings.text_color }};
    --card-color: {{ section.settings.card_color }};
  }
</style>
{{ 'lintext__product-line.css' | asset_url | stylesheet_tag }}
<section class="page-width lintext__product-line">
  <div class="lintext__product-line-background">
    <img
      src="{{ section.settings.background | image_url: width: section.settings.background.width }}"
      alt="{{ section.settings.background.alt }}"
      width="{{ section.settings.background.width }}"
      height="{{ section.settings.background.height }}"
      loading="lazy"
    >
  </div>
  <div class="lintext__product-line-text">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.subheading }}</p>
  </div>
  <ul class="lintext__product-line-cards">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'card' %}
          <li>
            <a href="{{ block.settings.url }}"></a>
            <div class="lintext__product-line-image">
              <img
                src="{{ block.settings.image | image_url: width: block.settings.image.width }}"
                alt="{{ block.settings.image.alt }}"
                width="{{ block.settings.image.width }}px"
                height="{{ block.settings.image.height }}px"
                loading="lazy"
              >
            </div>
            <div class="lintext__product-line-card-text">
              <h4>{{ block.settings.title }}</h4>
              <p>{{ block.settings.subtitle }}</p>
            </div>
          </li>
      {% endcase %}
    {% endfor %}
  </ul>
</section>
{% schema %}
{
  "name": "Lintext product Line",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "Product Line"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Section subheading",
      "default": "Elevating Every Detail of Your Table Setting"
    },
    {
      "type": "image_picker",
      "id": "background",
      "label": "Section background"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#1A3748"
    }, 
    {
      "type": "color",
      "id": "card_color",
      "label": "Card color",
      "default": "#fff"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Line URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Lintext product Line"
    }
  ]
}
{% endschema %}
