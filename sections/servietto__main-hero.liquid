<style>
  .servietto__main-hero {
    --background-color: {{ section.settings.background_color }};
    --text-color: {{ section.settings.text_color }};
    --button-color: {{ section.settings.button_color }};
  }
</style>
{{ 'servietto__main-hero.css' | asset_url | stylesheet_tag }}
<section class="page-width servietto__main-hero">
  <div class="servietto__main-hero_image">
    <img
      src="{{ section.settings.image | image_url: width: section.settings.image.width }}"
      alt="{{ section.settings.image.alt }}"
      width="{{ section.settings.image.width }}"
      height="{{ section.settings.image.height }}"
    >
  </div>
  <div class="servietto__main-hero_content">
    {% liquid
      assign header = section.settings.heading
      assign first_word = header | split: ' ' | first
      assign rest = header | remove: first_word
    %}
    <h1>
      <span>
        {{ first_word }}
      </span>
      <br>
      <span class="servietto_main-hero_content-rest">
        {{ rest }}
      </span>
    </h1>
    <p>{{ section.settings.subheading }}</p>
    <a href="{{ section.settings.cta_url }}">{{ section.settings.cta_label }}</a>
  </div>
</section>

{% schema %}
{
  "name": "Servietto main hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "Elegance in every fold"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Section text",
      "default": "Elevate your hosting expirience."
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "Call to action button url"
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "Call to action button label",
      "default": "Get a Quote"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#EAE7E2"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "text_color",
      "default": "#1C363D"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button color",
      "default": "#000"
    }
  ],
  "presets": [
    {
      "name": "Servietto main hero"
    }
  ]
}
{% endschema %}
