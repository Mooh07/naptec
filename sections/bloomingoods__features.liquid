<section class="bloomingoods__features page-width">
  <ul>
    {% for block in section.blocks %}
      <li>
        <div class="bloomingoods__feature-image-container">
          <img
            src="{{ block.settings.image |  image_url: width: block.settings.image.width }}"
            alt="{{ block.settings.image.alt }}"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
            loading="lazy">
        </div>
        <div class="bloomingoods__feature-text-container">
          <h5>
            {{ block.settings.text }}
          </h5>
        </div>
      </li>
    {% endfor %}
  </ul>
</section>
<style>
  .bloomingoods__features {
    background-color: rgba(29, 59, 44, 1);
    padding: var(--padding-sides);
    padding-top: 32px;
    padding-bottom: 32px;
  }
  .bloomingoods__features ul {
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: space-between;
    list-style: none;
    flex-wrap: wrap;

    column-gap: 100px;
    justify-content: center;
  }
  .bloomingoods__features ul li {
    display: flex;
    max-width: 20%;
    gap: 16px;
  }
  .bloomingoods__features ul li .bloomingoods__feature-text-container {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .bloomingoods__features ul li .bloomingoods__feature-text-container h5 {
    color: rgba(245, 232, 213, 1);
    font-family: Gentium Basic;
    font-size: 18px;
    font-weight: 400;
    line-height: 24px;
    text-align: left;
    text-underline-position: from-font;
    text-decoration-skip-ink: none;
    margin: 0;
    text-wrap: nowrap;
  }
  @media screen and (max-width: 992px) {
    .bloomingoods__features ul {}
  .bloomingoods__features ul li {
    min-width: calc(50% - 190px);
  }
}
@media screen and (max-width: 820px) {
  .bloomingoods__features ul li {
    min-width: calc(50% - 170px);
  }
}
@media screen and (max-width: 720px) {
  .bloomingoods__features ul li {
    min-width: calc(50% - 150px);
  }
}
@media screen and (max-width: 660px) {
  .bloomingoods__features ul li {
    min-width: calc(50% - 120px);
  }
}
@media screen and (max-width: 600px) {
  .bloomingoods__features ul li {
    min-width: calc(50% - 90px);
  }
}
@media screen and (max-width: 530px) {
  .bloomingoods__features ul {
    padding-left: 5rem;
    gap: 2rem;
    padding-top: 2rem;
    padding-bottom: 2rem;
  }
  .bloomingoods__features ul li {
    min-width: 100%;
  }
}
</style>
{% schema %}
  {
    "name": "Bloomingoods features",
    "settings": [],
    "blocks": [
      {
        "type": "feature",
        "name": "feature",
        "limit": 5,
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }, {
            "type": "html",
            "id": "text",
            "label": "Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Bloomingoods features"
      }
    ]
  }
{% endschema %}