<style>
  .servietto__product-categories {
    --background-color: {{ section.settings.background_color }};
    --text-color: {{ section.settings.text_color }};
  }
</style>
{{ 'servietto__product-categories.css' | asset_url | stylesheet_tag }}
<section class="page-width servietto__product-categories">
  <div class="servietto__product-categories-column servietto__product-categories-column-left">
    <h2>{{ section.settings.heading }}</h2>
    <img
      src="{{ section.settings.left_image | image_url: width: section.settings.left_image.width }}"
      alt="{{ section.settings.left_image.alt }}"
      width="{{ section.settings.left_image.width }}"
      height="{{ section.settings.left_image.height }}"
      loading="lazy"
    >
    <a href="{{ section.settings.first_category_url }}">
      {{- section.settings.first_category }}
      {% render 'servietto_arrow' -%}
    </a>
  </div>
  <div class="servietto__product-categories-column servietto__product-categories-column-middle">
    <img
      src="{{ section.settings.middle_image | image_url: width: section.settings.middle_image.width }}"
      alt="{{ section.settings.middle_image.alt }}"
      width="{{ section.settings.middle_image.width }}"
      height="{{ section.settings.middle_image.height }}"
      loading="lazy"
    >
    <a href="{{ section.settings.second_category_url }}">
      {{- section.settings.second_category }}
      {% render 'servietto_arrow' -%}
    </a>
  </div>
  <div class="servietto__product-categories-column servietto__product-categories-column-right">
    <img
      src="{{ section.settings.right_image | image_url: width: section.settings.right_image.width }}"
      alt="{{ section.settings.right_image.alt }}"
      width="{{ section.settings.right_image.width }}"
      height="{{ section.settings.right_image.height }}"
      loading="lazy"
    >
    <a href="{{ section.settings.third_category_url }}">
      {{- section.settings.third_category }}
      {% render 'servietto_arrow' -%}
    </a>
  </div>
</section>

{% schema %}
{
  "name": "Product categories",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "Product Categories"
    },
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left image"
    },
    {
      "type": "url",
      "id": "first_category_url",
      "label": "First category url"
    },
    {
      "type": "text",
      "id": "first_category",
      "label": "First category",
      "default": "Cocktail Napkins"
    },
    {
      "type": "image_picker",
      "id": "middle_image",
      "label": "Middle image"
    },
    {
      "type": "url",
      "id": "second_category_url",
      "label": "Second category url"
    },
    {
      "type": "text",
      "id": "second_category",
      "label": "Second category",
      "default": "Dinner Napkins"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right image"
    },
    {
      "type": "url",
      "id": "third_category_url",
      "label": "Third category url"
    },
    {
      "type": "text",
      "id": "third_category",
      "label": "Third category",
      "default": "Guest Towels"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#1C363D"
    }
  ],
  "presets": [
    {
      "name": "Product categories"
    }
  ]
}
{% endschema %}
