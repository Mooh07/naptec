{{ 'bloomingoods__main-hero-old.css' | asset_url | stylesheet_tag }}
<section class="bloomingoods__main-hero page-width">
  {% assign block_count = section.blocks | size %}
  <div class="glide">
    <div class="glide__track" data-glide-el="track">
      <div class="glide__slides">
        {% for block in section.blocks %}
          <div class="bloomingoods__main-hero glide__slide" {{ block.shopify_attributes }}>
            <div class="bloomingoods__main-hero-background-container">
              <img
                src="{{ block.settings.background_image |  image_url: width: block.settings.background_image.width }}"
                alt="{{ block.settings.background_image.alt }}"
                height="{{ block.settings.background_image.height }}"
                width="{{ block.settings.background_image.width }}">
            </div>
            <div class="bloomingoods__main-hero-text-container">
              <div class="bloomingoods__main-hero-text-wrapper">
                {% assign split_heading = block.settings.heading | split: " " %}
                <h1>
                  {% for word in split_heading %}
                    {{ word }}
                    {% if forloop.index == 1 or forloop.index == 2 %}
                      <br>
                    {% endif %}
                  {% endfor %}
                </h1>
                <a href="{{ block.settings.cta_url }}">
                  {{ block.settings.cta_label | upcase }}
                  <img
                    src="https://cdn.shopify.com/s/files/1/0611/8129/6700/files/Group_19.png?v=1733501843"
                    alt="bloomingoods_logo"
                    width="23.3"
                    height="24">
                </a>
              </div>
              <img
                src="{{ block.settings.text_container_image |  image_url: width: block.settings.text_container_image.width }}"
                alt="{{ block.settings.text_container_image.alt }}"
                height="{{ block.settings.text_container_image.height }}"
                width="{{ block.settings.text_container_image.width }}">
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    {% if block_count > 1 %}
      <div class="glide__bullets" data-glide-el="controls[nav]">
        {% for block in section.blocks %}
          <button class="glide__bullet" data-glide-dir="={{ forloop.index0 }}"></button>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    {% if section.blocks.size > 1 %}
      new Glide('.glide', {
        type: 'carousel',
        autoplay: {% if section.settings.autoplay %}5000{% else %}false{% endif %},
        animationDuration: 1000,
        gap: 0,
        perView: 1
      }).mount();
    {% endif %}
  });
</script>

<style>
  .bloomingoods__main-hero {
    position: relative;
    min-height: 720px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
  }
  .bloomingoods__main-hero-background-container {
    height: 720px;
    left: 0;
    position: absolute;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 1;
  }
  .bloomingoods__main-hero-background-container img {
    height: 100%;
    width: 100%;
    object-fit: cover;
  }
  .bloomingoods__main-hero-text-container {
    position: relative;
    z-index: 2;
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr;
    align-items: center;
    justify-items: center;
    max-width: 80%;
  }
  .bloomingoods__main-hero-text-wrapper {
    grid-area: 1 / 1 / 2 / 2;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }
  .bloomingoods__main-hero-text-wrapper h1 {
    position: relative;
    font-family: Latienne Pro;
    font-size: 68px;
    font-weight: 400;
    line-height: 105%;
    text-align: center;
    text-underline-position: from-font;
    text-decoration-skip-ink: none;
    color: rgba(29, 59, 44, 1);
    margin: 0 0 40px;
  }
  .bloomingoods__main-hero-text-wrapper a {
    position: relative;
    text-decoration: none;
    color: rgba(29, 59, 44, 1);
    font-family: Latienne Pro;
    font-size: 24px;
    font-weight: 500;
    line-height: 100%;
    text-align: center;
    text-underline-position: from-font;
    text-decoration-skip-ink: none;
    border-bottom: 1px solid rgba(29, 59, 44, 1);
    padding-bottom: 1rem;
    display: flex;
    gap: 20px;
  }
  .bloomingoods__main-hero-text-wrapper > a img {
    transition: 300ms;
  }
  .bloomingoods__main-hero-text-wrapper > a:hover img {
    transform: rotate(90deg);
    transition: 300ms;
  }

  .bloomingoods__main-hero-text-container > img {
    grid-area: 1 / 1 / 2 / 2;
    width: 100%;
    height: auto;
  }
  @media screen and (max-width: 992px) {
    .bloomingoods__main-hero-text-wrapper h1 {
      font-size: 60px;
      margin-bottom: 30px;
    }
    .bloomingoods__main-hero-text-wrapper a {
      font-size: 18px;
      padding-bottom: 7px;
      gap: 10px;
    }
    .bloomingoods__main-hero-text-wrapper a img {
      height: 20px;
      width: auto;
    }
  }
  @media screen and (max-width: 700px) {
    .bloomingoods__main-hero-text-wrapper h1 {
      font-size: 50px;
      margin-bottom: 20px;
    }
    .bloomingoods__main-hero-text-wrapper a {
      font-size: 12px;
      padding-bottom: 7px;
      gap: 10px;
    }
    .bloomingoods__main-hero-text-wrapper a img {
      height: 18px;
      width: auto;
    }
  }
  @media screen and (max-width: 600px) {
    .bloomingoods__main-hero-text-wrapper h1 {
      font-size: 38px;
      margin-bottom: 10px;
    }
    .bloomingoods__main-hero-text-wrapper a img {
      height: 15px;
      width: auto;
    }
  }
  @media screen and (max-width: 520px) {
    .bloomingoods__main-hero {
      align-items: start;
      padding-top: 20rem;
    }
    .bloomingoods__main-hero-text-wrapper h1 {
      font-size: 34px;
    }
  }
  @media screen and (max-width: 450px) {
    .bloomingoods__main-hero-text-wrapper h1 {
      font-size: 34px;
    }
  }

  .glide__bullets {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 1rem;
    z-index: 2;
  }

  .glide__bullet {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    border: 2px solid rgba(29, 59, 44, 1);
    background: transparent;
    cursor: pointer;
    padding: 0;
    transition: all 300ms ease;
  }

  .glide__bullet--active {
    background: rgba(29, 59, 44, 1);
  }
</style>
{% schema %}
  {
    "name": "Bloomingoods main hero",
    "settings": [
      {
        "type": "checkbox",
        "id": "autoplay",
        "label": "Enable autoplay",
        "default": true
      }
    ],
    "blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "text_container_image",
            "label": "Text container"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Bringing unforgettable to the table."
          },
          {
            "type": "image_picker",
            "id": "background_image",
            "label": "Background Image"
          },
          {
            "type": "text",
            "id": "cta_label",
            "label": "Call to action button label",
            "default": "get a quote"
          }, {
            "type": "url",
            "label": "Call to action button link",
            "id": "cta_url"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Bloomingoods main hero",
        "blocks": [
          {
            "type": "slide"
          }
        ]
      }
    ]
  }
{% endschema %}