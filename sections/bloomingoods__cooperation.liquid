<style>
  .bloomingoods__cooperation {
    --section-color: {{ section.settings.text_color }};
    --background-color: {{ section.settings.background_color }};
  }
</style>
{{ 'bloomingoods__cooperation.css' | asset_url | stylesheet_tag }}

<section class="bloomingoods__cooperation page-width">
  <div class="bloomingoods__cooperation-gradient"></div>
  <div class="bloomingoods__cooperation-background-image">
    <img 
      src="{{ section.settings.background_image | image_url: width: section.settings.background_image.width }}" 
      alt="{{ section.settings.background_image.alt }}"
      width="{{ section.settings.background_image.width }}"
      height="{{ section.settings.background_image.height }}"
      loading="lazy"
    >
  </div>
  <div class="bloomingoods__cooperation-text">
    <h2>
      {{ section.settings.heading | capitalize }}
    </h2>
    <p>
      {{ section.settings.paragraph }}
    </p>
    <a href="{{ section.settings.cta_url }}">
      {{ section.settings.cta_label | upcase }}
      <img
        src="https://cdn.shopify.com/s/files/1/0611/8129/6700/files/bloomingoods-icon.png?v=1723919059"
        alt="bloomingoods icon"
        width="24px"
        height="24px"
        loading="lazy"
      >
    </a>
  </div>
</section>

{% schema %}
{
  "name": "Bloomingoods cooperation",
  "settings": [
    {
        "type": "color",
        "id": "section_color",
        "label": "Section text color",
        "default": "#F5E9DB",
        "info": "Main text color for this section",
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Section background color",
        "default": "#1D3B2C",
        "info": "Background color for this section",
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Cooperation"
      },
      {
        "type": "text",
        "id": "paragraph",
        "label": "Paragraph",
        "default": "Together, we can create beautiful spaces and inspire others to live beautifully. Contact us today to explore partnership opportunities and let's make magic happen together."
      },
      {
        "type": "url",
        "id": "cta_url",
        "label": "Call to action button url"
      },
      {
        "type": "text",
        "id": "cta_label",
        "label": "Call to action button label",
        "default": "get a quote"
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background image"
      },
    ],
    "presets": [
      {
        "name": "Bloomingoods cooperation"
      }
    ]
}
{% endschema %}