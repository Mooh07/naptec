{{ 'naperee-contact-images.css' | asset_url | stylesheet_tag }}
<section class="page-width naperee__contact-images">
    <ul>
        {% for block in section.blocks %}
            {% case block.type %}
                {% when "image" %}
                    <li>
                        <img
                                src="{{ block.settings.image | image_url: width: block.settings.image.width }}"
                                alt="{{ block.settings.image.alt }}"
                                width="318px"
                                height="318px"
                                loading="lazy"
                        >
                    </li>
            {% endcase %}
        {% endfor %}
    </ul>
</section>

{% schema %}
{
  "name": "Naperee contact images",
  "settings": [],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Naperee contact images"
    }
  ]
}
{% endschema %}