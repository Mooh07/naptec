<section class="bloomingoods__make-your-custom-design page-width">
  <div class="bloomingoods__make-your-custom-design-background-container">
    <img
      src="{{ section.settings.background_image | image_url: width: section.settings.background_image.width }}"
      alt="{{ section.settings.background_image.alt }}"
      width="{{ section.settings.background_image.width }}"
      height="{{ section.settings.background_image.height }}"
      loading="lazy">
  </div>
  <div class="bloomingoods__make-your-custom-design-text-container">
    <div class="bloomingoods__make-your-custom-design-text-wrapper">
      {% assign split_heading = section.settings.heading | split: " " %}
      <h2>
        {% for word in split_heading %}
          {{ word }}
          {% if forloop.index == 2 %}
            <br>
          {% endif %}
        {% endfor %}
      </h2>
      {{ section.settings.paragraph }}
      <a href="{{ section.settings.cta_url }}">
        {{ section.settings.cta_label }}
        <img
          src="https://cdn.shopify.com/s/files/1/0611/8129/6700/files/Group_19.png?v=1733501843"
          alt="bloomingoods_logo"
          width="23.3"
          height="24">
      </a>
    </div>
    <div class="bloomingoods__make-your-custom-design-text-background-container">
      <img
        src="{{ section.settings.text_background | image_url: width: section.settings.text_background.width }}"
        alt="{{ section.settings.text_background.alt }}"
        width="{{ section.settings.text_background.width }}"
        height="{{ section.settings.text_background.height }}">
    </div>
  </div>
</section>
<style>
  .bloomingoods__make-your-custom-design {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 720px;
  }
  .bloomingoods__make-your-custom-design-background-container {
    position: absolute;
    bottom: 0;
    left: 0;
    top: 0;
    right: 0;
  }
  .bloomingoods__make-your-custom-design-background-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .bloomingoods__make-your-custom-design-text-container {
    z-index: 2;
    position: relative;
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr;
  }
  .bloomingoods__make-your-custom-design-text-background-container {
    grid-area: 1 / 1 / 2 / 2;
  }
  .bloomingoods__make-your-custom-design-text-background-container img {
    width: 100%;
    height: 100%;
  }
  .bloomingoods__make-your-custom-design-text-wrapper {
    grid-area: 1 / 1 / 2 / 2;
    z-index: 1;
    color: rgba(29, 59, 44, 1);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }
  .bloomingoods__make-your-custom-design-text-wrapper h2 {
    font-family: Latienne Pro;
    font-size: 60px;
    font-weight: 400;
    line-height: 113%;
    text-align: center;
    text-underline-position: from-font;
    text-decoration-skip-ink: none;
    color: rgba(29, 59, 44, 1);
    margin: 0 0 24px;
  }
  .bloomingoods__make-your-custom-design-text-wrapper p {
    font-family: "filson";
    font-size: 20px;
    font-weight: 300;
    line-height: 140%;
    text-align: center;
    text-underline-position: from-font;
    text-decoration-skip-ink: none;
    margin: 0;
  }
  .bloomingoods__make-your-custom-design-text-wrapper p:nth-child(4) {
    display: block;
    margin-bottom: 32px;
  }
  .bloomingoods__make-your-custom-design-text-wrapper a {
    font-family: Latienne Pro;
    font-size: 20px;
    font-weight: 500;
    line-height: 120%;
    text-align: center;
    text-underline-position: from-font;
    text-decoration-skip-ink: none;
    margin: 0;
    color: inherit;
    text-decoration: none;
    border-bottom: 1px solid rgba(29, 59, 44, 1);
    padding-bottom: 8px;
    display: flex;
    gap: 20px;
  }
  .bloomingoods__make-your-custom-design-text-wrapper a img {
    transition: 300ms;
  }
  .bloomingoods__make-your-custom-design-text-wrapper a:hover img {
    transform: rotate(90deg);
  }
  @media screen and (max-width: 992px) {
    .bloomingoods__make-your-custom-design-text-wrapper h2 {
      font-size: 50px;
    }
  }
  .bloomingoods__make-your-custom-design-text-container {
    max-width: 80%;
  }
  @media screen and (max-width: 700px) {
    .bloomingoods__make-your-custom-design-text-wrapper h2 {
      font-size: 38px;
      margin-bottom: 12px;
    }
    .bloomingoods__make-your-custom-design-text-wrapper p {
      font-size: 16px;
    }
    .bloomingoods__make-your-custom-design-text-wrapper p:nth-child(4) {
      margin-bottom: 16px;
    }
    .bloomingoods__make-your-custom-design-text-wrapper a {
      font-size: 16px;
      padding-bottom: 4px;
    }
    .bloomingoods__make-your-custom-design-text-wrapper a img {
      width: 18px;
      height: auto;
    }
  }
  @media screen and (max-width: 600px) {
    .bloomingoods__make-your-custom-design-text-container {
      max-width: 90%;
    }
    .bloomingoods__make-your-custom-design-text-wrapper h2 {
      font-size: 32px;
    }
    .bloomingoods__make-your-custom-design-text-wrapper p {
      font-size: 14px;
    }
  }
</style>
{% schema %}
  {
    "name": "Bloomingoods custom",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Make your custom design"
      },
      {
        "type": "html",
        "id": "paragraph",
        "label": "Paragraph"
      },
      {
        "type": "url",
        "id": "cta_url",
        "label": "Call to action button url"
      }, {
        "type": "text",
        "id": "cta_label",
        "label": "Call to action button label",
        "default": "GET A QUOTE"
      }, {
        "type": "image_picker",
        "id": "text_background",
        "label": "Text background"
      }
    ],
    "presets": [
      {
        "name": "Bloomingoods custom"
      }
    ]
  }
{% endschema %}