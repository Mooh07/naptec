{% schema %}
{
  "name": "Image Text with Svg",
  "settings": [
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "A Touch of Class"
    },
    {
      "type": "textarea",
      "id": "paragraph_1",
      "label": "Paragraph 1",
      "default": "Sometimes, simplicity is the ultimate sophistication..."
    },
    {
      "type": "html",
      "id": "right_svg",
      "label": "Right Side SVG",
      "default": "<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><circle cx='50' cy='50' r='40' stroke='red' stroke-width='4' fill='none' /></svg>"
    }
  ],
  "presets": [
    {
      "name": "Image Text with Svg"
    }
  ]
}
{% endschema %}

<style>
.touch-class-wrapper {
  display: flex;
  /* align-items: center; */
  justify-content: space-between;
  gap: 3rem;
  background-color: #f8f1e9;
  padding: 3rem 2rem;
  flex-wrap: wrap;
}

.touch-class-left {
  flex: 1;
  max-width: 29%;
}
 
.touch-class-center{
  flex: 1;
  max-width: 35%;
}
.touch-class-right {
  flex: 1;
  max-width: 36%;
}

.touch-class-left img {
  width: 100%;
  height: auto;
  border-radius: 6px;
}

.touch-class-center h2 {
  font-size: 3.5rem;
  color: #073B44;
  margin-bottom: 1rem;
  font-weight: bold;
}

.touch-class-center p {
  font-size: 1.7rem;
  line-height: 1.8;
  color: #000000;
  margin-bottom: 1rem;
  max-width: 600px;
}

/* SVG pattern */
.touch-class-right svg {
  width: 98%;
  height: auto;
}

/* Responsive */
@media screen and (max-width: 768px) {
  .touch-class-wrapper {
    flex-direction: column;
    text-align: center;
  }
  .touch-class-center{
  position: relative;
    bottom: -15px;
    z-index: 5;
  }

  .touch-class-center h2 {
    font-size: 2.5rem;
  }

  .touch-class-center p {
    font-size: 1.5rem;
  }
  .touch-class-right{
      margin-top: -300px;
  }

  .touch-class-left,
  .touch-class-center,
  .touch-class-right {
    max-width: 100%;
  }
}
</style>

<div class="touch-class-wrapper">
  <div class="touch-class-left">
    {% if section.settings.left_image %}
      <img src="{{ section.settings.left_image | img_url: '800x' }}" alt="Left Image">
    {% endif %}
  </div>

  <div class="touch-class-center">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.paragraph_1 }}</p>
  </div>

  <div class="touch-class-right">
    {{ section.settings.right_svg }}
  </div>
</div>
